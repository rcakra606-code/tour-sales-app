# ==========================================================
# üåç Travel Dashboard Enterprise v3.9.2
# Final Environment Configuration
# ==========================================================

# ==========================================================
# üîß SERVER CONFIGURATION
# ==========================================================
NODE_ENV=production
PORT=5000

# URL frontend Render (untuk CORS & CSP)
FRONTEND_URL=https://travel-dashboard.onrender.com

# URL backend API (jika dibutuhkan untuk proxy frontend)
BACKEND_URL=https://travel-dashboard.onrender.com/api

# ==========================================================
# üß† JWT SECURITY
# ==========================================================
# Gunakan secret unik (panjang, acak, tidak dibagikan)
JWT_SECRET=your_super_secret_random_key_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ==========================================================
# Koneksi Neon PostgreSQL (aktif untuk Render)
DATABASE_URL=postgresql://neondb_owner:npg_xxxxxxxxxxxxxxxxx@ep-your-neon-db.ap-southeast-1.aws.neon.tech/neondb?sslmode=require

# SQLite fallback (otomatis aktif jika Neon tidak tersedia)
SQLITE_PATH=./data/travel.db

# ==========================================================
# üíæ BACKUP & CRON CONFIGURATION
# ==========================================================
# Folder penyimpanan backup database
BACKUP_DIR=./backups

# Jadwal cron backup otomatis setiap jam 3 pagi (UTC)
CRON_BACKUP_SCHEDULE=0 3 * * *

# ==========================================================
# üß± LOGGING CONFIGURATION
# ==========================================================
# Semua log disimpan di /logs/app.log (Winston)
LOG_DIR=./logs
LOG_LEVEL=info
ENABLE_DEBUG=false

# ==========================================================
# üß© FRONTEND SECURITY (CSP via Helmet)
# ==========================================================
# Script dan CDN yang diizinkan (jangan ubah kecuali menambah library)
CSP_SCRIPT_SRC=https://cdn.tailwindcss.com https://cdn.jsdelivr.net https://cdn.jsdelivr.net/npm/chart.js https://cdnjs.cloudflare.com
CSP_STYLE_SRC=https://fonts.googleapis.com https://cdn.jsdelivr.net
CSP_IMG_SRC=https://cdn.jsdelivr.net data: https:
CSP_FONT_SRC=https://fonts.gstatic.com
CSP_CONNECT_SRC=*

# ==========================================================
# üßæ HEALTHCHECK (Render Monitoring)
# ==========================================================
HEALTHCHECK_PATH=/api/health

# ==========================================================
# üß≠ SYSTEM MODULES STATUS
# ==========================================================
# Semua modul aktif di sistem saat ini
ENABLE_REPORT_TOUR=true
ENABLE_REPORT_SALES=true
ENABLE_REPORT_DOCUMENT=true
ENABLE_EXECUTIVE_DASHBOARD=true
ENABLE_USER_MANAGEMENT=true
ENABLE_REGION_MANAGEMENT=true
ENABLE_AUDIT_LOG=true
