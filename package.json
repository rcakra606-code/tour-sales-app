{
  "name": "tour-sales-management",
  "version": "1.0.0",
  "description": "Tour and Sales Management System (full-stack)",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "migrate": "node migrations/migrate.js",
    "backup": "node scripts/backup-database.js",
    "restore": "node scripts/restore-database.js",
    "generate-ssl": "node scripts/generate-ssl.js",
    "setup-ssl": "chmod +x scripts/setup-ssl.sh && ./scripts/setup-ssl.sh",
    "test": "jest",
    "build": "echo 'No build step required'",
    "deploy": "./deploy.sh",
    "docker:build": "docker build -t tour-sales-app .",
    "docker:run": "docker run -p 3000:3000 -p 443:443 tour-sales-app",
    "logs": "tail -f logs/app-$(date +%Y-%m-%d).log"
  },
  "dependencies": {
    "express":"^4.18.2",
    "cors":"^2.8.5",
    "helmet":"^7.0.0",
    "express-rate-limit":"^6.8.1",
    "pg":"^8.11.1",
    "bcryptjs":"^2.4.3",
    "jsonwebtoken":"^9.0.1",
    "multer":"^1.4.5-lts.1",
    "winston":"^3.10.0",
    "winston-daily-rotate-file":"^4.7.1",
    "node-cron":"^3.0.2",
    "node-forge":"^1.3.1",
    "dotenv":"^16.3.1"
  },
  "devDependencies": {
    "nodemon":"^3.0.1",
    "jest":"^29.6.1"
  }
}
