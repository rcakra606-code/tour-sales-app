{
  "name": "travel-dashboard-enterprise",
  "version": "5.3.3",
  "description": "Enterprise-grade Travel Dashboard dengan role-based access, reporting, dan integrasi Neon PostgreSQL + Render backup automation.",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/initDatabase.js",
    "setup-test-users": "node scripts/setup-test-users.js",
    "backup-db": "node scripts/backup-database.js",
    "restore-db": "node scripts/restore-database.js ./backups/latest.json.gz",
    "setup-cron": "node scripts/setup-cron.js",
    "verify-routes": "node scripts/verify-routes.js",
    "setup-admin": "node scripts/setup-admin.js",
    "test-email": "node scripts/test-email.js",
    "postinstall": "npm run setup-test-users"
  },
  "keywords": [
    "travel-dashboard",
    "nodejs",
    "express",
    "postgresql",
    "neon",
    "render",
    "jwt",
    "rbac",
    "enterprise",
    "admin-dashboard",
    "backup"
  ],
  "author": "Travel Dashboard Dev Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "zlib": "^1.0.5",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}